<%- include('partials/header', { title: 'Server Error', user: null }) %>

    <div style="text-align: center; padding: 2rem 0;">
      <h1 style="font-size: 3rem; font-weight: bold; margin-bottom: 1rem;">500</h1>
      <p style="font-size: 1.25rem; margin-bottom: 2rem;">Server Error</p>
      <p style="color: #6b7280; margin-bottom: 2rem;">Something went wrong on our server. We're working on fixing it.</p>
      <% if (error) { %>
        <div style="background-color: #fee2e2; border: 1px solid #fecaca; color: #b91c1c; padding: 0.75rem 1rem; border-radius: 0.375rem; margin-bottom: 1.5rem; display: inline-block;">
          <%= error %>
        </div>
      <% } %>
      <a href="/" style="display: inline-block; background-color: #3b82f6; color: white; padding: 0.75rem 1.5rem; border-radius: 0.375rem; text-decoration: none;">
        Go Home
      </a>
    </div>

<%- include('partials/footer') %>
